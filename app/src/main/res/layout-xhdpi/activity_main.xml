<?xml version="1.0" encoding="utf-8"?>


<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="top|center_horizontal"
    android:background="@color/branco"
    android:columnCount="1"
    android:rowCount="5"
    >


    <GridLayout android:id="@+id/logotipo"
        android:layout_gravity="top|center_horizontal"
        android:layout_row="0"
        android:layout_column="0">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="145dp"
            android:layout_marginBottom="25dp"
            android:src="@drawable/logo"
            />

    </GridLayout>

    <GridLayout android:id="@+id/base"
        android:background="@drawable/base2"
        android:layout_width="246dp"
        android:layout_height="246dp"
        android:layout_gravity="center|center_horizontal"
        android:columnCount="3"
        android:rowCount="3"
        android:layout_column="0">

        <GridLayout android:layout_column="0" android:layout_row="0" android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/img1"
                android:layout_width="82dp" android:layout_height="82dp"
                android:layout_column="0" android:layout_row="0"
                android:textSize="60sp"
                android:textColor="@color/preto"
                android:text=""
                android:background="@android:color/transparent"
                /> <!--android:layout_marginRight="30dp"-->
        </GridLayout>
        <GridLayout android:layout_column="1" android:layout_row="0" android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/img2"
                android:layout_width="82dp" android:layout_height="82dp"
                android:layout_column="1" android:layout_row="0"
                android:textSize="60sp"
                android:text=""
                android:background="@android:color/transparent"
                /><!--android:layout_marginRight="30dp"-->
        </GridLayout>
        <GridLayout android:layout_column="2" android:layout_row="0" android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="82dp" android:layout_height="82dp"
                android:layout_column="2" android:layout_row="0"
                android:textSize="60sp"
                android:text=""
                android:id="@+id/img3"
                android:background="@android:color/transparent"
                />
        </GridLayout>
        <GridLayout android:layout_column="0" android:layout_row="1" android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="82dp" android:layout_height="82dp"
                android:layout_column="0" android:layout_row="1"
                android:textSize="60sp"
                android:text=""
                android:id="@+id/img4"
                android:background="@android:color/transparent"
                /><!--
                android:layout_marginRight="30dp"
                android:layout_marginTop="30dp"-->
        </GridLayout>
        <GridLayout android:layout_column="1" android:layout_row="1" android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="82dp" android:layout_height="82dp"
                android:layout_column="1" android:layout_row="1"
                android:textSize="60sp"
                android:text=""
                android:id="@+id/img5"
                android:background="@android:color/transparent"
                /><!--android:layout_marginRight="30dp"
                android:layout_marginTop="30dp"-->
        </GridLayout>
        <GridLayout android:layout_column="2" android:layout_row="1" android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="82dp" android:layout_height="82dp"
                android:layout_column="2" android:layout_row="1"
                android:textSize="60sp"
                android:text=""
                android:id="@+id/img6"
                android:background="@android:color/transparent"
                /><!--android:layout_marginTop="30dp"-->
        </GridLayout>
        <GridLayout android:layout_column="0" android:layout_row="2" android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="82dp" android:layout_height="82dp"
                android:layout_column="0" android:layout_row="2"
                android:textSize="60sp"
                android:text=""
                android:id="@+id/img7"
                android:background="@android:color/transparent"
                /><!--
                android:layout_marginRight="30dp"
                android:layout_marginTop="30dp"-->
        </GridLayout>
        <GridLayout android:layout_column="1" android:layout_row="2" android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="82dp" android:layout_height="82dp"
                android:layout_column="1" android:layout_row="2"
                android:textSize="60sp"
                android:text=""
                android:id="@+id/img8"
                android:background="@android:color/transparent"
                /><!--android:layout_marginRight="30dp"
                android:layout_marginTop="30dp"-->
        </GridLayout>
        <GridLayout android:layout_column="2" android:layout_row="2" android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="82dp" android:layout_height="82dp"
                android:layout_column="2" android:layout_row="2"
                android:textSize="60sp"
                android:text=""
                android:id="@+id/img9"
                android:background="@android:color/transparent"
                /><!--android:layout_marginTop="30dp"-->
        </GridLayout>

    </GridLayout>

    <GridLayout android:id="@+id/botoes"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginTop="15dp"
        android:layout_row="3" android:layout_column="0"
        android:columnCount="2" android:rowCount="1"
        android:layout_width="wrap_content">

        <GridLayout
            android:layout_row="0" android:layout_column="0"
            android:layout_width="wrap_content">

            <Button
                android:id="@+id/retry"
                android:layout_column="1" android:layout_row="1"
                android:textSize="25sp"
                android:text="@string/reiniciar"
                android:textColor="@color/preto"
                android:layout_marginRight="30dp"
                android:background="@android:color/transparent"/>
        </GridLayout>

        <GridLayout
            android:layout_row="0" android:layout_column="1"
            android:layout_width="wrap_content">

            <Button
                android:id="@+id/btnInterstitial"
                android:layout_column="2" android:layout_row="1"
                android:textSize="25dp"
                android:text="@string/anuncio"
                android:textColor="@color/preto"
                android:background="@android:color/transparent"
                />
        </GridLayout>

    </GridLayout>

    <GridLayout android:id="@+id/publicidade"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_row="4" android:layout_column="0"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.google.android.gms.ads.AdView

            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ads:adSize="BANNER"
            ads:adUnitId="@string/admob_banner_id">

        </com.google.android.gms.ads.AdView>





    </GridLayout>







</GridLayout>






