<?xml version="1.0" encoding="utf-8"?>


<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="top|center_horizontal"
    android:background="@color/colorAccent"


    android:columnCount="4"
    android:rowCount="4">

    <GridLayout android:layout_gravity="top|center_horizontal" android:layout_row="0" android:layout_column="0"
        android:layout_columnSpan="4" >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_marginBottom="40dp"
        android:layout_gravity="center"
        android:src="@drawable/logo"/>

    </GridLayout>


    <GridLayout android:background="@color/preto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_horizontal"
        android:layout_column="0"
        android:layout_rowSpan="2"
        android:layout_columnSpan="4">

    <Button
        android:id="@+id/img1"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_column="0" android:layout_row="0"
        android:textSize="60dp"
        android:textColor="@color/preto"
        android:text=" "
        android:layout_marginRight="10dp"
        android:background="@android:color/background_light"/>
    <Button
        android:id="@+id/img2"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_column="1" android:layout_row="0"
        android:textSize="60dp"
        android:text=" "
        android:layout_marginRight="10dp"
        android:background="@android:color/background_light"/>
    <Button
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_column="2" android:layout_row="0"
        android:textSize="60dp"
        android:text=" "
        android:id="@+id/img3"
        android:background="@android:color/background_light"/>
    <Button
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_column="0" android:layout_row="1"
        android:textSize="60dp"
        android:text=" "
        android:id="@+id/img4"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/background_light"/>
    <Button
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_column="1" android:layout_row="1"
        android:textSize="60dp"
        android:text=" "
        android:id="@+id/img5"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/background_light"/>
    <Button
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_column="2" android:layout_row="1"
        android:textSize="60dp"
        android:text=" "
        android:id="@+id/img6"
        android:layout_marginTop="10dp"
        android:background="@android:color/background_light"/>
    <Button
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_column="0" android:layout_row="2"
        android:textSize="60dp"
        android:text=" "
        android:id="@+id/img7"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/background_light"
        />
    <Button
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_column="1" android:layout_row="2"
        android:textSize="60dp"
        android:text=" "
        android:id="@+id/img8"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/background_light"/>
    <Button
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_column="2" android:layout_row="2"
        android:textSize="60dp"
        android:text=" "
        android:id="@+id/img9"
        android:layout_marginTop="10dp"
        android:background="@android:color/background_light"/>
    </GridLayout>

    <GridLayout
        android:layout_gravity="center|center_horizontal"
        android:layout_row="3" android:layout_column="0"
        android:layout_columnSpan="4"
        android:layout_width="wrap_content">

        <GridLayout
            android:layout_gravity="center|center_horizontal"
            android:layout_row="0" android:layout_column="0"
            android:layout_columnSpan="4"
            android:layout_width="wrap_content">

        <Button
            android:layout_gravity="center"
            android:id="@+id/retry"
            android:layout_width="match_parent" android:layout_height="match_parent"
            android:layout_column="1" android:layout_row="1"
            android:textSize="30dp"
            android:text="Teste"
            android:textColor="@color/preto"
            android:layout_marginRight="30dp"
            android:background="@android:color/background_light"/>

        <Button
            android:layout_gravity="center"
            android:id="@+id/btnInterstitial"
            android:layout_column="2" android:layout_row="1"
            android:textSize="30dp"
            android:text="teste"
            android:textColor="@color/preto"
            android:background="@android:color/background_light"/>

        </GridLayout>

        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"

            android:layout_marginTop="20dp"
            android:layout_column="1" android:layout_row="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            ads:adSize="BANNER"
            ads:adUnitId="@string/admob_banner_id">

        </com.google.android.gms.ads.AdView>


    </GridLayout>







</GridLayout>






